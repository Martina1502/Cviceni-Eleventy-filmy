---
layout: zakladni
pagination:
  data: filmy
  size: 1
  alias: film
permalink: "/film/{{ film.nazev | slug }}/"
---
<section class="main-film">
  <section>
    <h1>{{ film.nazev }}</h1>
    <section class="main-film-specifika">
      <h4 class="main-film-specifika--levy">Rok:</h4>
      <p class="main-film-specifika--pravy">{{ film.rok }}</p>

      <h4 class="main-film-specifika--levy">Země:</h4>
      <p class="main-film-specifika--pravy">{{ film.zeme | join(', ') }}</p>

      <h4 class="main-film-specifika--levy">Žánr:</h4>
      <p class="main-film-specifika--pravy">{{ film.zanr | join(' / ') }}</p>

      <h4 class="main-film-specifika--levy">Délka:</h4>
      <p class="main-film-specifika--pravy">{{ film.delka }} min</p>
    </section>

    <h2>Obsah</h2>

    <p>{{ film.obsah.text }} (<a class="main-film__obsah-odkaz" href="{{ film.obsah.autor.odkaz }}">{{ film.obsah.autor.jmeno }}</a>)</p>
  </section>

  <section>
    <img src={{ film.plakat.url }} width="200px">

    <h2>Hodnocení</h2>
      {% if film.hodnoceni == 1 %}
      <img src="obrazky/hvezda-vyplnena.svg">
      <img src="obrazky/hvezda-prazdna.svg">
      <img src="obrazky/hvezda-prazdna.svg">
      <img src="obrazky/hvezda-prazdna.svg">
      <img src="obrazky/hvezda-prazdna.svg">
      {% endif %}

      {% if film.hodnoceni == 2 %}
      <img src="/obrazky/hvezda-vyplnena.svg">
      <img src="/obrazky/hvezda-vyplnena.svg">
      <img src="/obrazky/hvezda-prazdna.svg">
      <img src="/obrazky/hvezda-prazdna.svg">
      <img src="/obrazky/hvezda-prazdna.svg">
      {% endif %}

      {% if film.hodnoceni == 3 %}
      <img src="/obrazky/hvezda-vyplnena.svg">
      <img src="/obrazky/hvezda-vyplnena.svg">
      <img src="/obrazky/hvezda-vyplnena.svg">
      <img src="/obrazky/hvezda-prazdna.svg">
      <img src="/obrazky/hvezda-prazdna.svg">
      {% endif %}

      {% if film.hodnoceni == 4 %}
      <img src="/obrazky/hvezda-vyplnena.svg">
      <img src="/obrazky/hvezda-vyplnena.svg">
      <img src="/obrazky/hvezda-vyplnena.svg">
      <img src="/obrazky/hvezda-vyplnena.svg">
      <img src="/obrazky/hvezda-prazdna.svg">
      {% endif %}

      {% if film.hodnoceni == 5 %}
      <img src="/obrazky/hvezda-vyplnena.svg">
      <img src="/obrazky/hvezda-vyplnena.svg">
      <img src="/obrazky/hvezda-vyplnena.svg">
      <img src="/obrazky/hvezda-vyplnena.svg">
      <img src="/obrazky/hvezda-vyplnena.svg">
      {% endif %}

    <h2>Související filmy</h2>
    <ul class="seznam">
      {% for souvisejiciFilm in film.souvisejici %}
      <li class="seznam__polozka"><a href="/film/{{ souvisejiciFilm.nazev | slug }}">{{ souvisejiciFilm.nazev }}</a></li>
      {% endfor %}
    </ul>
  </section>
</section>